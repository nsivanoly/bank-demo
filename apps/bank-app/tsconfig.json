{
    "compilerOptions": {
        "jsx": "react",
        "module": "ESNext",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "./typings"
        ],
        "lib": [
            "es2017",
            "dom",
            "dom.iterable"
        ],
        "target": "es2017"
    },
    "include": [
        "typings/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}